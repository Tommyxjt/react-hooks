{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "lib": ["dom", "ESNext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@tx-labs/react-hooks": ["./packages/hooks/src/index.ts"],
      "@tx-labs/react-hooks/*": ["./packages/hooks/src/*"]
    },
    "importHelpers": true
  },
  "include": [".dumirc.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "lib", "es", "dist"]
}
