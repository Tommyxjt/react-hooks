{
  "name": "@tx-labs/react-hooks",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tommyxjt/react-hooks.git",
    "directory": "packages/hooks"
  },
  "bugs": {
    "url": "https://github.com/Tommyxjt/react-hooks/issues"
  },
  "homepage": "https://github.com/Tommyxjt/react-hooks#readme",
  "version": "0.1.0",
  "type": "module",
  "description": "React hooks library",
  "main": "lib/index.cjs",
  "module": "es/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./es/index.d.ts",
        "default": "./es/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "scripts": {
    "clean": "rimraf lib es dist",
    "build": "pnpm clean && rollup -c",
    "prepublishOnly": "pnpm build",
    "release": "npm publish"
  },
  "keywords": [
    "react",
    "react-dom",
    "react-hooks",
    "hooks",
    "typescript",
    "utility-hooks",
    "state-management",
    "lifecycle",
    "effect",
    "debounce",
    "throttle",
    "performance",
    "isMounted",
    "safe-setstate",
    "event-listener"
  ],
  "author": "Tommy Xu",
  "license": "MIT",
  "packageManager": "pnpm@10.27.0",
  "files": [
    "lib",
    "es",
    "dist",
    "README.md"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.3.2",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.9.3"
  },
  "sideEffects": false
}
